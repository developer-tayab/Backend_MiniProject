<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Login</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>

<body class="bg-gradient-to-r from-blue-50 to-gray-100 p-3 min-h-screen flex items-center justify-center">
  <div class="w-full max-w-sm bg-white shadow-2xl rounded-2xl p-8">
    <!-- Logo/Title -->
    <div class="text-center mb-6">
      <h1 class="text-3xl font-bold text-blue-600">MySocialApp</h1>
      <p class="text-sm text-gray-500">Welcome back! Please login to your account.</p>
    </div>

    <!-- Login Form -->
    <form action="/login" method="POST" class="space-y-5">
      <!-- Email Input -->
      <div class="relative">
        <label for="email" class="block text-sm font-medium text-gray-600">Email</label>
        <input type="email" id="email" name="email"
          class="w-full border border-gray-300 rounded-lg p-3 pl-10 text-gray-700 focus:ring-2 focus:ring-blue-400 focus:outline-none"
          placeholder="you@example.com" required>
        <span class="absolute left-3 top-9 text-gray-400">
          ðŸ“§
        </span>
      </div>

      <!-- Password Input -->
      <div class="relative">
        <label for="password" class="block text-sm font-medium text-gray-600">Password</label>
        <input type="password" id="password" name="password"
          class="w-full border border-gray-300 rounded-lg p-3 pl-10 text-gray-700 focus:ring-2 focus:ring-blue-400 focus:outline-none"
          placeholder="Enter your password" required>
        <span class="absolute left-3 top-9 text-gray-400">
          ðŸ”’
        </span>
      </div>

      <!-- Submit Button -->
      <button type="submit"
        class="w-full bg-blue-500 hover:bg-blue-600 text-white font-semibold py-2 px-4 rounded-lg transition shadow-md">
        Login
      </button>
    </form>

    <!-- Divider -->
    <div class="flex items-center my-4">
      <hr class="w-full border-gray-300">
      <span class="px-3 text-gray-400 text-sm">or</span>
      <hr class="w-full border-gray-300">
    </div>



    <!-- Signup Link -->
    <p class="text-gray-600 text-center mt-5 text-sm">
      Don't have an account?
      <a href="/" class="text-blue-500 hover:underline font-medium">Sign up</a>
    </p>
  </div>
</body>

</html>