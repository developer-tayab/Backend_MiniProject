<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>User Form</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>

<body class="bg-gradient-to-r from-blue-50 to-gray-100 min-h-screen flex items-center justify-center">
  <div class="w-full max-w-md bg-white shadow-2xl rounded-2xl p-8 mx-4">
    <h2 class="text-3xl font-bold text-blue-600 text-center mb-6">User Registration</h2>

    <form action="/create" method="POST" class="space-y-5">
      <!-- Username -->
      <div class="relative">
        <label for="username" class="block text-sm font-medium text-gray-600">Username</label>
        <input type="text" id="username" name="username" aria-label="Username"
          class="w-full border border-gray-300 rounded-lg p-3 pl-10 text-gray-700 focus:ring-2 focus:ring-blue-400 focus:outline-none"
          placeholder="Enter your username" required>
        <span class="absolute left-3 top-9 text-gray-400">👤</span>
      </div>

      <!-- Name -->
      <div class="relative">
        <label for="name" class="block text-sm font-medium text-gray-600">Name</label>
        <input type="text" id="name" name="name" aria-label="Name"
          class="w-full border border-gray-300 rounded-lg p-3 pl-10 text-gray-700 focus:ring-2 focus:ring-blue-400 focus:outline-none"
          placeholder="Enter your full name" required>
        <span class="absolute left-3 top-9 text-gray-400">📝</span>
      </div>

      <!-- Email -->
      <div class="relative">
        <label for="email" class="block text-sm font-medium text-gray-600">Email</label>
        <input type="email" id="email" name="email" aria-label="Email"
          class="w-full border border-gray-300 rounded-lg p-3 pl-10 text-gray-700 focus:ring-2 focus:ring-blue-400 focus:outline-none"
          placeholder="you@example.com" required>
        <span class="absolute left-3 top-9 text-gray-400">📧</span>
      </div>

      <!-- Password -->
      <div class="relative">
        <label for="password" class="block text-sm font-medium text-gray-600">Password</label>
        <input type="password" id="password" name="password" aria-label="Password"
          class="w-full border border-gray-300 rounded-lg p-3 pl-10 text-gray-700 focus:ring-2 focus:ring-blue-400 focus:outline-none"
          placeholder="Enter your password" required>
        <span class="absolute left-3 top-9 text-gray-400">🔒</span>
      </div>

      <!-- Age -->
      <div class="relative">
        <label for="age" class="block text-sm font-medium text-gray-600">Age</label>
        <input type="number" id="age" name="age" aria-label="Age"
          class="w-full border border-gray-300 rounded-lg p-3 pl-10 text-gray-700 focus:ring-2 focus:ring-blue-400 focus:outline-none"
          placeholder="Enter your age" required>
        <span class="absolute left-3 top-9 text-gray-400">🎂</span>
      </div>

      <!-- Submit Button -->
      <button type="submit"
        class="w-full bg-blue-500 hover:bg-blue-600 text-white font-semibold py-2 px-4 rounded-lg transition shadow-md">
        Submit
      </button>

      <!-- Login Link -->
      <p class="text-center text-gray-600 text-sm mt-4">
        Already have an account?
        <a href="/login" class="text-blue-500 hover:underline font-medium">Login here</a>
      </p>
    </form>
  </div>
</body>

</html>