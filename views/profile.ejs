<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>User Profile</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>

<body class="bg-gradient-to-b from-gray-100 p-3 to-gray-300 min-h-screen flex flex-col">
  <!-- Navbar -->
  <nav class="w-full bg-white shadow-md py-4 px-8 rounded-md flex justify-between items-center sticky top-0 z-10">
    <h1 class="text-2xl font-bold text-gray-800">MySocialApp</h1>
    <form action="/logout" method="get">
      <button type="submit" aria-label="Logout Button"
        class="bg-red-500 hover:bg-red-600 text-white font-semibold py-2 px-6 rounded-full transition">
        Logout
      </button>
    </form>
  </nav>

  <main class="flex-grow flex flex-col items-center justify-center py-10">
    <div class="w-full max-w-5xl grid grid-cols-1 lg:grid-cols-3 gap-8">
      <!-- Profile Section -->
      <div class="col-span-1 bg-white shadow-xl rounded-2xl p-8 text-center">
        <h2 class="text-3xl font-bold text-gray-800 mb-3">
          Welcome, <span class="text-blue-600">
            <%= userFind.name %>
          </span>!
        </h2>
        <p class="text-gray-500">Share your thoughts and connect with others!</p>
      </div>

      <!-- Post Form -->
      <div class="col-span-2 bg-white shadow-xl rounded-2xl p-8">
        <h3 class="text-2xl font-semibold text-gray-800 mb-4">Create a New Post</h3>
        <form action="/create-post" method="POST" class="space-y-4">
          <textarea name="content" rows="5" placeholder="What's on your mind?"
            class="w-full border border-gray-300 rounded-lg p-3 text-gray-700 focus:ring-2 focus:ring-blue-500 focus:outline-none resize-none"
            required></textarea>
          <button type="submit" aria-label="Submit Post Button"
            class="w-full bg-gradient-to-r from-blue-500 to-blue-600 hover:from-blue-600 hover:to-blue-700 text-white font-semibold py-2 px-6 rounded-lg transition">
            Submit Post
          </button>
        </form>
      </div>
    </div>

    <!-- User Posts -->
    <div class="w-full max-w-5xl mt-10 space-y-6">
      <% if(userFind.posts.length> 0) { %>
        <% userFind.posts.forEach(post=> { %>
          <div class="bg-white shadow-xl rounded-2xl p-8">
            <p class="text-gray-600">
              <%= post.content %>
            </p>
            <div class="flex justify-between items-center mt-4">
              <span class="text-gray-600">Likes: <%= post.likes.length %></span>
              <form action="/like/<%= post._id %>" method="POST">
                <button type="submit" aria-label="Like Button"
                  class="flex items-center bg-green-500 hover:bg-green-600 text-white py-1 px-4 rounded-full">
                  üëç Like
                </button>
              </form>
            </div>
          </div>
          <% }) %>
            <% } else { %>
              <div class="bg-white shadow-xl rounded-2xl p-8 text-center">
                <h1 class="text-gray-600 text-lg">No user posts yet.</h1>
              </div>
              <% } %>
    </div>
  </main>
</body>

</html>